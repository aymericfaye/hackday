{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "paths": { "*": [ "src/*" ], "conf/*": [ "conf/*" ] },
    "module": "commonjs",
    "target": "es5",
    "sourceMap": true,
    "noImplicitAny": false,
    "outDir": "bin",
    "suppressImplicitAnyIndexErrors": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "typeRoots": [ "@types/", "node_modules/@types/" ],
    "types": [ "es6-promise", "node" ]
  },
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": {
    "compileOnSave": false,
    "buildOnSave": false,
    "rewriteTsconfig": false
  },
  "exclude": [
    "node_modules"
  ],
  "filesGlob": [
    "typings.d.ts",
    "classnames.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
